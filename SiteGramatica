CONCATER ID: GERA UMA CONCATENAÇÃO DE ID ( 1 OU MAIS )
    CONCATENAR_ID -> id ; CONCATENAR_ID.
    CONCATENAR_ID ->id.


DECLARAÇÃO DE UMA VARIAVEL ( NADA , 1 OU MAIS) :
    DECLARACAO_VARIAVEL -> tipo : GERADOR_ID ponto .
    DECLARACAO_VARIAVEL ->.
    GERADOR_ID -> CONCATENAR_ID.

DECLARAÇÃO DE UM VETOR: (1 OU NADA)
    DECLARACAO_VET -> vet tipo : id num ponto .
     DECLARACAO_VET -> .

PROTOTIPO DE FUNÇÃO :
    PROT_FUNC -> funcao id ( LISTAR_PARAMETROS ) : tipo ponto .
    LISTAR_PARAMETROS ->  PARAMETROS .
    LISTAR_PARAMETROS -> .
    PARAMETROS -> VETOR tipo : id ; PARAMETROS.
    PARAMETROS -> VETOR tipo : id.
    VETOR -> vet.
    VETOR ->.

CHAMADA DE FUNCAO (1):
    CHAMADA_FUNC -> id ( LISTAR_PARAMETROS_CHAMADA ) ponto .
    LISTAR_PARAMETROS_CHAMADA -> CONCATENAR_ID.
    LISTAR_PARAMETROS_CHAMADA ->.

EXPRESSÃO ARITMETRICA (1 ou MAIS):
    EXP -> EXP_N2 SOMA_SUB EXP.
    EXP -> EXP_N2.
    EXP_N2 -> EXP_N3 MULTI_DIV_REST EXP_N2.
    EXP_N2 -> EXP_N3.
    EXP_N3 -> EXP_FINAL ** EXP_N3.
    EXP_N3 -> EXP_FINAL.
    SOMA_SUB -> +.
    SOMA_SUB -> -.
    MULTI_DIV_REST -> *.
    MULTI_DIV_REST -> /.
    MULTI_DIV_REST -> %.
    EXP_FINAL -> id.
    EXP_FINAL -> -id.
    EXP_FINAL -> ( EXP ).
    EXP_FINAL -> -( EXP ).
    EXP_FINAL -> num.
    EXP_FINAL -> -num.
    EXP_FINAL -> id[ EXP ].
    EXP_FINAL -> -id[ EXP ].

ATRIBUIÇÃO (0 OU 1) :
     ATRIBUICAO -> id INDEX <- EXP ponto.
     ATRIBUICAO ->.
     INDEX -> [ EXP ].
     INDEX -> .

EXPRESSAO RELACIONAL SIMPLES ( 1 OU 0):
    EXP_RELACIONAL_SIMPLES -> EXP RELACIONAIS EXP .
    RELACIONAIS -> =.
    RELACIONAIS -> <.
    RELACIONAIS -> <=.
    RELACIONAIS -> >.
    RELACIONAIS -> >=.
    RELACIONAIS -> <>.

EXPRESSAO RELACIONAL TOTAL (1 OU MAIS ):
    EXP_RELACIONAL_TOTAL -> EXP_RELACIONAL_N2 or EXP_RELACIONAL_TOTAL.
    EXP_RELACIONAL_TOTAL -> EXP_RELACIONAL_N2.
    EXP_RELACIONAL_N2 ->  EXP_RELACIONAL_N3 & EXP_RELACIONAL_N2.
    EXP_RELACIONAL_N2 -> EXP_RELACIONAL_N3.
    EXP_RELACIONAL_N3 -> ! EXP_RELACIONAL_FINAL.
    EXP_RELACIONAL_N3 -> EXP_RELACIONAL_FINAL.
    EXP_RELACIONAL_FINAL -> EXP_RELACIONAL_SIMPLES.
    EXP_RELACIONAL_FINAL -> ( EXP_RELACIONAL_TOTAL ) .
