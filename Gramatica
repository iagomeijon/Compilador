######## INICIO DO BLOCO DE DECLARACAO DE VAIRAVEIS ##########

CONCATER ID: GERA UMA CONCATENAÇÃO DE ID ( 1 OU MAIS ID JUNTOS SEPARADOS POR PONTO E VIRGULA)
    CONCATENAR_ID -> id ; CONCATENAR_ID | id

DECLARAÇÃO DE UMA VARIAVEL (  1 ) :
    DECLARACAO_ID -> tipo : CONCATENAR_ID .

DECLARAÇÃO DE UM VETOR: (1 OU NADA)
    DECLARACAO_VET -> vet tipo : id num .


DECLARAÇÃO DE VARIAVEIS (0, 1 OU MAIS):
    VARIAVEL -> DECLARACAO_ID  | DECLARACAO_VET

BLOCO DE DECLARAÇÃO DE FUNÇOES (0 ,1 OU MAIS VARIAVEIS) :
    BLOCO_VARIAVEIS -> var VARIAVEIS
    VARIAVEIS -> VARIAVEL ponto VARIAVEIS | E


######## FIM DO BLOCO DE DECLARACAO DE VAIRAVEIS ##########

######## INICIO DO BLOCO COMANDOS ##########


CHAMADA DE FUNCAO (1) [COMANDO]:
    CHAMADA_FUNC -> id ( LISTAR_PARAMETROS_CHAMADA )
    LISTAR_PARAMETROS_CHAMADA -> CONCATENAR_ID | E

EXPRESSÃO ARITMETRICA (1 OU MAIS) [COMANDO] :
    EXP -> EXP_N2 SOMA_SUB EXP | EXP_N2
    EXP_N2 -> EXP_N3 MULTI_DIV_REST EXP_N2 | EXP_N2
    EXP_N3 -> EXP_FINAL ** EXP_N3 | EXP_FINAL
    SOMA_SUB -> + | -
    MULTI_DIV_REST * | / | %
    EXP_FINAL -> id | - id | ( EXP ) | - ( EXP ) | num | -num | id [ EXP ] | -id [ EXP ]

ATRIBUIÇÃO (0 OU 1) [COMANDO] :
     ATRIBUICAO -> id INDEX <- EXP . | E
     INDEX -> [ EXP ] | E

EXPRESSAO RELACIONAL SIMPLES ( 1 OU 0) AUXILIAR DA TOTAL:
    EXP_RELACIONAL_SIMPLES -> EXP RELACIONAIS EXP
    RELACIONAIS -> ! | = | < | <= | > | >= | <>

EXPRESSAO RELACIONAL TOTAL (1 OU MAIS ):
    EXP_RELACIONAL_TOTAL -> EXP_RELACIONAL_N2 or EXP_RELACIONAL_TOTAL | EXP_RELACIONAL_N2
    EXP_RELACIONAL_TOTAL_N2 ->  EXP_RELACIONAL_N3 & EXP_RELACIONAL_N2 |   EXP_RELACIONAL_N3
    EXP_RELACIONAL_N3 -> ! EXP_RELACIONAL_FINAL | EXP_RELACIONAL_N3 -> EXP_RELACIONAL_FINAL
    EXP_RELACIONAL_FINAL -> EXP_RELACIONAL_SIMPLES | EXP_RELACIONAL_FINAL -> ( EXP_RELACIONAL_TOTAL ).

BLOCO DE COMANDO (0 OU 1) :
    BLOCO_COMANDO -> CHAMADA_FUNC . BLOCO_COMANDO | ATRIBUICAO . BLOCO_COMANDO | BLOCO_IF BLOCO_COMANDO | BLOCO_ENQUANTO BLOCO_COMANDO | BLOCO_ATEH BLOCO_COMANDO | LEIA | ESCREVA | E

BLOCO IF (1) :
    BLOCO_IF -> se EXP_RELACIONAL_TOTAL inicio BLOCO_COMANDO fim BLOCO_SENAO
    BLOCO_SENAO -> senao inicio BLOCO_COMANDO fim | E

BLOCO ENQUANTO (1) :
    BLOCO_ENQUANTO ->   enquanto EXP_RELACIONAL_TOTAL inicio BLOCO_COMANDO fim .

BLOCO ATEH (1):
    BLOCO_ATEH -> para id de EXP ateh EXP inicio BLOCO_COMANDO fim .


LEIA (1):
    LEIA ->  leia CONCATENAR_ID .

ESCREVA (1) :

    ESCREVA -> escreva LISTA_ESCREVA
    LISTA_ESCREVA -> id ; LISTA_ESCREVA | string ; LISTA_ESCREVA | num ; LISTA_ESCREVA | id | string | num

######## FIM DO BLOCO COMANDOS ##########

######## INICIO DO BLOCO FUNÇÕES ##########

LISTAR PARAMETROS :
    LISTAR_PARAMETROS ->  PARAMETROS | E
    PARAMETROS -> VETOR tipo : id ; PARAMETROS | VETOR tipo : id
    VETOR -> vet | E

PROTOTIPO DE FUNÇÃO (1) :
    PROT_FUNC -> funcao id ( LISTAR_PARAMETROS ) : tipo

BLOCO DE PROTOTIPO DE FUNÇÃO :
    BLOCO_PROTOTIPO -> PROT_FUNC . BLOCO_PROTOTIPO | E

DECLARACAO DE FUNÇÃO (1):
    DEC_FUNCAO -> funcao id ( LISTAR_PARAMETROS ) : tipo BLOCO_VARIAVEIS inicio COMANDOS_FUNCAO fim
    COMANDOS_FUNCAO -> CHAMADA_FUNC ponto COMANDOS_FUNCAO
    COMANDOS_FUNCAO -> ATRIBUICAO ponto COMANDOS_FUNCAO
    COMANDOS_FUNCAO -> BLOCO_IF  COMANDOS_FUNCAO
    COMANDOS_FUNCAO -> BLOCO_ENQUANTO COMANDOS_FUNCAO
    COMANDOS_FUNCAO -> BLOCO_ATEH COMANDOS_FUNCAO
    COMANDOS_FUNCAO -> LEIA ponto  COMANDOS_FUNCAO
    COMANDOS_FUNCAO -> ESCREVA ponto COMANDOS_FUNCAO
    COMANDOS_FUNCAO -> RECEBA ponto COMANDOS_FUNCAO
    COMANDOS_FUNCAO -> E
    RECEBA -> receba .
    RECEBA -> receba ( EXP ) .

BLOCO DE DECLARACAO DE FUNCAO :
    BLOCO_DEC_FUNC -> DEC_FUNCAO BLOCO_DEC_FUNC | E

######## FIM DO BLOCO FUNÇÕES ##########
